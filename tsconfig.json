{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/controllers/*": ["controllers/*"],
      "@/models/*": ["models/*"],
      "@/routes/*": ["routes/*"],
      "@/utils/*": ["utils/*"]
    },
    "outDir": "./dist"
  },
  "include": ["interfaces.d.ts"],
  "exclude": ["node_modules"]
}
